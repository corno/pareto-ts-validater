{
  "name": "pareto-ts-validater",
  "version": "0.0.1",
  "description": "validates if a typescript code base conforms the 'pareto' rules",
  "main": "dist/index.js",
  "scripts": {
    "analyse pareto repos": "npm run build && node ./dist/src/pub/esc/analyseParetoRepos > tmp/pareto.csv",
    "analyse all workspace files": "npm run build && node ./dist/src/pub/esc/analyseAllWorkspaceFiles > tmp/allFiles.csv",
    "analyse typesript files in workspace": "npm run build && node ./dist/src/pub/esc/analyseTypescriptFilesInWorkspace",
    "build": "rm -rf ./dist && tsc",
    "update2latest": "ncu -u --packageFile package.json && nsi && tsc",
    "validate astn": "npm run build && node ./dist/src/index.js \"../astn/tsconfig.json\""
  },
  "author": "Corno",
  "license": "ISC",
  "dependencies": {
    "pareto-runtime": "^0.10.0",
    "typesafe-typescript-ast": "^0.4.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.9"
  }
}
