{
  "name": "pareto-ts-validater",
  "version": "0.0.1",
  "description": "validates if a typescript code base conforms the 'pareto' rules",
  "main": "dist/index.js",
  "scripts": {
    "makeEscBinExecutable": "find ./dist/*/esc/bin/ -type f -name \"*.js\" -exec chmod 777 {} +",
    "build": "rm -rf ./dist && tsc && npm run makeEscBinExecutable",
    "update2latest": "ncu -u --packageFile package.json && nsi && tsc",
    "generate": "npm run build && node  ./dist/generateASTs/esc/index.js && npm run build"
  },
  "author": "Corno",
  "license": "ISC",
  "dependencies": {
    "pareto-runtime": "^0.15.0",
    "ts-morph": "^13.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.5",
    "generate-typesafe-ast": "^0.0.16"
  }
}
