{
  "name": "pareto-ts-validater",
  "version": "0.0.1",
  "description": "validates if a typescript code base conforms the 'pareto' rules",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "generate-ts-api": "npm run build && node ./dist/generate_ts_api/generateCode.js ./src/TypeScriptAPI",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update2latest": "ncu -u --packageFile package.json && nsi && tsc",
    "validate astn": "npm run build && node ./dist/src/index.js \"../astn/tsconfig.json\""
  },
  "author": "Corno",
  "license": "ISC",
  "dependencies": {
    "pareto-runtime": "^0.9.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "ts-morph": "^12.2.0"
  }
}
